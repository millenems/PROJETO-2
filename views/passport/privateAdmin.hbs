{{#if user}}
<div class="body2">
  <div class="row justify-content-center">
    <div class="col-12 d-flex justify-content-center">
      <h1 class="h1Chat" name="username">Bem vindo administrador <span>{{user.username}}</span>
    </div>
       
         <div class="d-flex justify-content-center">
      <button class="buttonChat0 mx-2" id="deleteUser" action="/">controle administrativo</button>
      <a class="aChat mx-2" href="/logout">log out</a>

         </div>

  </div>
      
      <form id ="chat">

    <div class="messages chatBox">
      {{#each retorno}}
      <div class="message"><strong> {{this.author}}</strong>:{{this.message}} </div>
      
      {{/each}}

    </div>
     <input class="inputChat" type="hidden"  name="username" value={{user.username}}>
     <input class="inputChat" type="text" name="message" placeholder="Digite sua mensagem">
    <button class="buttonChat" type="submit">Enviar</button>

  </form>
</div>

{{/if}}
