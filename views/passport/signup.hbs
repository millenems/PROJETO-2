<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1>Registro</h1>
    </div>

    <div class="col-md-6">

      <form action="/signup" method="post">
        <div class="form-group">
          <label for="username-input">nome de usuario</label>
          <input name="username" type="username" class="form-control" id="username-input">
        </div>

        <div class="form-group">
          <label for="name-input">nome completo</label>
          <input name="name" type="password" class="form-control" id="name-input">
        </div>
        <div class="form-group">
          <label for="password-input">assunto</label>
          <input name="disease" type="password" class="form-control" id="disease-input">
        </div>
        <div class="form-group">
          <label for="password-input">senha</label>
          <input name="password" type="password" class="form-control" id="password-input">
        </div>

        {{#if message}}
       <div class="error-message">{{ message }}</div>
         {{/if}}

        

        <button type="submit" class="btn btn-dark">Sign up</button>

      </form>
    </div>

  </div>
</div>

