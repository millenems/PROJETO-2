                    </ul>
                    <!-- Search Form -->
                    <div class="header-search-form ml-auto">
                          <form action="#">
                              <input type="search" class="form-control" placeholder="Input your keyword then press enter..." id="search" name="search">
                              <input class="d-none" type="submit" value="submit">
                          </form>
                      </div>
                </nav>
                <div class="container d-flex align-items-center">
                        <div class="row allForm2 d-flex justify-content-center">
                          <div class="col-10 pt-2">
                            <h1>Sign Up</h1>
                          </div>
                          <div class="col-10 barra">
                            <form action="/signup" method="post">
                              <div class="form-group">
                                <label for="username-input">Nome do usuário</label>
                                <input name="username" type="username" class="form-control" id="username-input">
                              </div>
                              <div class="form-group">
                                <label for="name-input">Nome completo</label>
                                <input name="name" type="password" class="form-control" id="name-input">
                              </div>
                              <div class="form-group">
                                <label for="password-input">Assunto</label>
                                <input name="disease" list="diseases" class="form-control" id="disease-input">
                                <datalist id="diseases">
                                <option value="AIDS">
                                <option value="ANSIEDADE">
                                <option value="AVC">
                                <option value="DEPRESSÃO">
                                <option value="DIABETES">
                                <option value="CANCER">
                                <option value="OBESIDADE">
                                <option value="TOC">
                                </datalist>
                              </div>
                              <div class="form-group">
                                <label for="password-input">Senha</label>
                                <input name="password" type="password" class="form-control" id="password-input">
                              </div>

                               {{#if message}}
                              <div class="error-message">{{ message }}</div>
                                {{/if}}

                              <button type="submit" class="btn btn-dark">Sign Up</button>
                              
                              <p class="">
                                Já possui cadastro? Vá direto ao
                              <a class=" text-white" href="/login">Login!</a>
                              </p>
                      
                            </form>
                          </div>
                      
                        </div>
                      </div>
                      
                </div>
    </div>
